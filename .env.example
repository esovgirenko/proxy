# Database
DATABASE_URL=postgresql://proxy_user:proxy_password@localhost:5432/proxy_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Security
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10

# Email (optional, for email activation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
EMAIL_FROM=noreply@proxy.example.com

# Sentry (optional, for error tracking)
SENTRY_DSN=

# Domain
DOMAIN=proxy.example.com
